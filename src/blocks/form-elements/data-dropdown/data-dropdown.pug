mixin data-dropdown()

	.data-dropdown--wrapper
		.data-dropdown--wrapper--data1
			label(for='data-dropdown1' class='data-dropdown__label--style') date Dropdown
			.data-dropdown
				input(name='data-dropdown1' id='data-dropdown1'
					class="data-dropdown__input--style" type='date')

		.data-dropdown--wrapper--data2
			label(for='data-dropdown2' class='data-dropdown__label--style') date Dropdown
			.data-dropdown
				input(name='data-dropdown2' id='data-dropdown2'
					class="data-dropdown__input--style" type='date')
